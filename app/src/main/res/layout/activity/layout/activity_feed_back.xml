<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:orientation="vertical"
        android:padding="@dimen/space_20">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/feed_my_rating"
            android:textColor="@color/black"
            android:textSize="@dimen/font_25" />

        <RatingBar
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/space_10"
            android:numStars="5"
            android:rating="5"
            android:stepSize="1" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/space_10"
            android:text="@string/feed_comments"
            android:textColor="@color/black"
            android:textSize="@dimen/font_25" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/space_10"
            android:background="@color/color_F4F6FA"
            android:gravity="left"
            android:hint="@string/feed_hint"
            android:minLines="8"
            android:maxLines="10"
            android:padding="@dimen/space_10"
            android:scrollbars="vertical" />

        <Button
            android:id="@+id/btnSubmit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/space_20"
            android:background="@drawable/selector_verify_btn_bg"
            android:text="@string/btn_submit"
            android:textAllCaps="false"
            android:textColor="@color/verify_btn_textcolor_selector"
            android:textSize="@dimen/font_16" />

    </LinearLayout>
</ScrollView>