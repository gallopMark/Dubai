<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <TextView
        android:id="@+id/tvTraffic"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/space_16"
        android:text="@string/more_traffic"
        android:textColor="@color/appTextColor"
        android:textSize="@dimen/font_16"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tvEvents"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/space_16"
        android:layout_marginTop="@dimen/space_10"
        android:drawableTop="@mipmap/ic_more_events"
        android:drawablePadding="@dimen/space_5"
        android:gravity="center"
        android:padding="@dimen/space_5"
        android:text="@string/more_menu_events"
        android:textColor="@color/color_66"
        android:textSize="@dimen/font_12"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvTraffic" />

    <View
        android:id="@+id/vLine1"
        android:layout_width="match_parent"
        android:layout_height="@dimen/space_10"
        android:layout_marginTop="@dimen/space_16"
        android:background="@color/itemDivider"
        app:layout_constraintTop_toBottomOf="@+id/tvEvents" />

    <TextView
        android:id="@+id/tvTravel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/space_16"
        android:text="@string/more_travel"
        android:textColor="@color/appTextColor"
        android:textSize="@dimen/font_16"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/vLine1" />

    <LinearLayout
        android:id="@+id/llTopMenu"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/space_16"
        android:orientation="horizontal"
        app:layout_constraintTop_toBottomOf="@+id/tvTravel">

        <TextView
            android:id="@+id/tvHotels"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:drawableTop="@mipmap/ic_menu_hotels"
            android:drawablePadding="@dimen/space_5"
            android:gravity="center"
            android:text="@string/travel_menu_hotels"
            android:textColor="@color/color_66"
            android:textSize="@dimen/font_12" />

        <TextView
            android:id="@+id/tvRestaurants"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:drawableTop="@mipmap/ic_menu_restaurants"
            android:drawablePadding="@dimen/space_5"
            android:gravity="center"
            android:text="@string/travel_menu_restaurants"
            android:textColor="@color/color_66"
            android:textSize="@dimen/font_12" />

        <TextView
            android:id="@+id/tvAttractions"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:drawableTop="@mipmap/ic_menu_attractions"
            android:drawablePadding="@dimen/space_3"
            android:gravity="center"
            android:text="@string/travel_menu_attractions"
            android:textColor="@color/color_66"
            android:textSize="@dimen/font_12" />

        <TextView
            android:id="@+id/tvBusStop"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:drawableTop="@mipmap/ic_menu_transport"
            android:drawablePadding="@dimen/space_3"
            android:gravity="center"
            android:text="@string/travel_menu_bus_stop"
            android:textColor="@color/color_66"
            android:textSize="@dimen/font_12" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/llBottomMenu"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/space_16"
        android:orientation="horizontal"
        app:layout_constraintTop_toBottomOf="@+id/llTopMenu">

        <TextView
            android:id="@+id/tvParking"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:drawableTop="@mipmap/ic_menu_parking"
            android:drawablePadding="@dimen/space_3"
            android:gravity="center"
            android:text="@string/travel_menu_RTA_parking"
            android:textColor="@color/color_66"
            android:textSize="@dimen/font_12" />

        <TextView
            android:id="@+id/tvPolice"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:drawableTop="@mipmap/ic_menu_police"
            android:drawablePadding="@dimen/space_3"
            android:gravity="center"
            android:text="@string/travel_menu_police"
            android:textColor="@color/color_66"
            android:textSize="@dimen/font_12" />


        <TextView
            android:id="@+id/tvGroups"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:drawableTop="@mipmap/ic_menu_groups"
            android:drawablePadding="@dimen/space_5"
            android:gravity="center"
            android:text="@string/travel_menu_groups"
            android:textColor="@color/color_66"
            android:textSize="@dimen/font_12" />

        <TextView
            android:id="@+id/tvWeather"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:drawableTop="@mipmap/ic_menu_weather"
            android:drawablePadding="@dimen/space_3"
            android:gravity="center"
            android:text="@string/travel_menu_weather"
            android:textColor="@color/color_66"
            android:textSize="@dimen/font_12" />
    </LinearLayout>

    <View
        android:id="@+id/vLine2"
        android:layout_width="match_parent"
        android:layout_height="@dimen/space_10"
        android:layout_marginTop="@dimen/space_16"
        android:background="@color/itemDivider"
        app:layout_constraintTop_toBottomOf="@+id/llBottomMenu" />

    <TextView
        android:id="@+id/tvInner"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/space_16"
        android:text="@string/more_inner"
        android:textColor="@color/appTextColor"
        android:textSize="@dimen/font_16"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/vLine2" />

    <TextView
        android:id="@+id/tvReport"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/space_16"
        android:layout_marginTop="@dimen/space_10"
        android:drawableTop="@mipmap/ic_more_report"
        android:drawablePadding="@dimen/space_5"
        android:gravity="center"
        android:padding="@dimen/space_5"
        android:text="@string/more_menu_report"
        android:textColor="@color/color_66"
        android:textSize="@dimen/font_12"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvInner" />

</android.support.constraint.ConstraintLayout>