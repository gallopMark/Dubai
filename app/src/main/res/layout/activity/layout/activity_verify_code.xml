<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:background="@color/white"
    android:layout_height="match_parent">

    <TextView
        android:textColor="@color/black"
        android:text="@string/verification_code"
        android:textStyle="bold"
        android:padding="@dimen/space_10"
        android:textSize="@dimen/font_30"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:text="@string/verification_code_promote"
        android:textSize="@dimen/font_16"
        android:textColor="@color/gary"
        android:padding="@dimen/space_10"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_marginLeft="@dimen/space_10"
        android:layout_marginRight="@dimen/space_10"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tvSendPhone"
            android:textSize="@dimen/font_16"
            android:textColor="@color/black"
            android:text="+971  05****4567"
            android:gravity="left"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content" />

        <TextView
            android:text="@string/resend_in"
            android:textSize="@dimen/font_16"
            android:textColor="@color/gary"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/tvRemainingTime"
            android:text="59s"
            android:textSize="@dimen/font_16"
            android:layout_marginRight="@dimen/space_10"
            android:layout_marginLeft="@dimen/space_5"
            android:textColor="@color/black"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </LinearLayout>

    <com.uroad.dubai.widget.VerifyCodeEditText
        android:id="@+id/edVerify"
        android:layout_marginTop="@dimen/space_10"
        android:layout_width="match_parent"
        android:layout_gravity="center_horizontal"
        android:layout_height="wrap_content" />

    <Button
        android:id="@+id/btnVerify"
        android:textSize="@dimen/font_16"
        android:textAllCaps="false"
        android:layout_margin="@dimen/space_20"
        android:textColor="@color/verify_btn_textcolor_selector"
        android:background="@drawable/selector_verify_btn_bg"
        android:text="@string/verify"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

</LinearLayout>