<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/ivBg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scaleType="centerCrop" />

    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/llContent"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="@dimen/space_10">

                <ImageView
                    android:id="@+id/ivIcon"
                    android:layout_width="@dimen/space_50"
                    android:layout_height="@dimen/space_50"
                    android:background="@color/white"
                    android:src="@mipmap/ic_roads_e311" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tvTitle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:ellipsize="end"
                        android:gravity="start|center"
                        android:maxLines="1"
                        android:textColor="@color/appTextColor"
                        android:textSize="@dimen/font_14" />

                    <TextView
                        android:id="@+id/mDirectionTv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/space_2"
                        android:ellipsize="end"
                        android:maxLines="1"
                        android:textColor="@color/color_b9"
                        android:textSize="@dimen/font_12" />
                </LinearLayout>

                <ImageView
                    android:id="@+id/ivCollect"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/space_10"
                    android:padding="@dimen/space_5"
                    android:src="@mipmap/ic_collect" />
            </LinearLayout>

            <TextView
                android:id="@+id/tvContent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/space_10"
                android:layout_marginEnd="@dimen/space_10"
                android:gravity="start|center"
                android:textColor="@color/gary"
                android:textSize="@dimen/font_13" />

            <View
                android:id="@+id/vLine"
                android:layout_width="match_parent"
                android:layout_height="@dimen/space_1"
                android:layout_marginStart="@dimen/space_10"
                android:layout_marginTop="@dimen/space_10"
                android:layout_marginEnd="@dimen/space_10"
                android:background="@color/itemDivider" />

            <TextView
                android:id="@+id/tvInformation"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/space_10"
                android:text="@string/information"
                android:textColor="@color/appTextColor"
                android:textSize="@dimen/font_16" />

            <LinearLayout
                android:id="@+id/llTopTime"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:paddingTop="@dimen/space_20"
                    android:paddingBottom="@dimen/space_20">

                    <TextView
                        android:id="@+id/tvStartTime"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/appTextColor"
                        android:textSize="@dimen/font_16"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/tvStartTimeTips"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/start_time"
                        android:textColor="@color/gary"
                        android:textSize="@dimen/font_14" />
                </LinearLayout>

                <View
                    android:layout_width="@dimen/space_1"
                    android:layout_height="match_parent"
                    android:background="@color/itemDivider" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:paddingTop="@dimen/space_20"
                    android:paddingBottom="@dimen/space_20">

                    <TextView
                        android:id="@+id/tvHandleTime"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/appTextColor"
                        android:textSize="@dimen/font_16"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/tvHandleTimeTips"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/handle_time"
                        android:textColor="@color/gary"
                        android:textSize="@dimen/font_14" />
                </LinearLayout>
            </LinearLayout>

            <View
                android:id="@+id/dividerLine"
                android:layout_width="match_parent"
                android:layout_height="@dimen/space_1"
                android:layout_marginStart="@dimen/space_10"
                android:layout_marginEnd="@dimen/space_10"
                android:background="@color/itemDivider" />

            <LinearLayout
                android:id="@+id/llBottomTime"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:paddingTop="@dimen/space_20"
                    android:paddingBottom="@dimen/space_20">

                    <TextView
                        android:id="@+id/tvEndTime"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/appTextColor"
                        android:textSize="@dimen/font_16"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/tvEndTimeTips"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/end_time"
                        android:textColor="@color/gary"
                        android:textSize="@dimen/font_14" />
                </LinearLayout>

                <View
                    android:layout_width="@dimen/space_1"
                    android:layout_height="match_parent"
                    android:background="@color/itemDivider" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:paddingTop="@dimen/space_20"
                    android:paddingBottom="@dimen/space_20">

                    <TextView
                        android:id="@+id/tvDistance"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/appTextColor"
                        android:textSize="@dimen/font_16"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/tvDistanceTips"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/congestion_distance"
                        android:textColor="@color/gary"
                        android:textSize="@dimen/font_14" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </android.support.v4.widget.NestedScrollView>
</LinearLayout>