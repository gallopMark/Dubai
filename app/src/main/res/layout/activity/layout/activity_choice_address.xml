<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.v7.widget.RecyclerView
        android:id="@+id/rvAddressList"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    </android.support.v7.widget.RecyclerView>

    <TextView
        android:id="@+id/tvMidLetter"
        android:layout_width="@dimen/space_80"
        android:layout_height="@dimen/space_80"
        android:layout_centerInParent="true"
        android:layout_gravity="center"
        android:background="@drawable/letter_mid_view_background"
        android:gravity="center"
        android:padding="@dimen/space_5"
        android:textColor="@color/color_f5f5f5"
        android:textSize="@dimen/space_35"
        android:visibility="invisible" />

    <com.uroad.dubai.widget.MyLetterSortView
        android:id="@+id/rightLetter"
        android:layout_width="@dimen/space_25"
        android:layout_height="match_parent"
        android:layout_alignParentRight="true"
        android:background="@color/transparent" />

</RelativeLayout>

