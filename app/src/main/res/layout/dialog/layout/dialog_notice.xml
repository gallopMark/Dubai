<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:layout_margin="@dimen/space_25"
    android:background="@drawable/bg_corners_white_5dp"
    android:minWidth="@dimen/space_280"
    android:orientation="vertical">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/space_16">

        <TextView
            android:id="@+id/mTimeTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:textColor="@color/appTextColor"
            android:textSize="@dimen/font_16" />

        <ImageView
            android:id="@+id/mCloseImageView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end|center"
            android:padding="@dimen/space_5"
            android:src="@mipmap/ic_close_grey" />
    </FrameLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/space_1"
        android:background="@color/itemDivider" />

    <TextView
        android:id="@+id/mContentTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/space_16"
        android:gravity="center"
        android:textColor="@color/gary"
        android:textSize="@dimen/font_14" />
</LinearLayout>