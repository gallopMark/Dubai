<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="@dimen/space_10"
    app:cardUseCompatPadding="true"
    android:layout_margin="@dimen/space_10"
    app:cardElevation="@dimen/space_4">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@mipmap/icon_norecords"
        android:orientation="vertical"
        android:paddingBottom="@dimen/space_10">

        <RelativeLayout
            android:background="@android:color/transparent"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/space_50"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tvNoRecord"
                android:textColor="@color/layoutLoading"
                android:text="No record"
                android:gravity="center"
                android:layout_centerHorizontal="true"
                android:background="@android:color/transparent"
                android:textSize="@dimen/font_16"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <Button
                android:id="@+id/btnNavigate"
                android:layout_below="@+id/tvNoRecord"
                android:textSize="@dimen/font_16"
                android:textAllCaps="false"
                android:layout_marginTop="@dimen/space_10"
                android:textColor="@color/setting_btn_textcolor_selector"
                android:background="@drawable/selector_setting_btn_bg"
                android:text="Navigate"
                android:layout_marginBottom="@dimen/space_10"
                android:layout_width="@dimen/space_100"
                android:layout_height="@dimen/space_30" />


        </RelativeLayout>


    </RelativeLayout>
</android.support.v7.widget.CardView>
