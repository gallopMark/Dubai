<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:padding="@dimen/space_10"
    android:background="@color/white"
    android:layout_width="match_parent" android:layout_height="wrap_content">

    <ImageView
        android:src="@mipmap/icon_enent_type"
        android:id="@+id/ivFavEventType"
        android:layout_marginLeft="@dimen/space_10"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginRight="@dimen/space_10"
        android:layout_marginTop="@dimen/space_3"
        android:layout_alignTop="@+id/tvFavEventName"
        android:src="@mipmap/icon_details" />

    <TextView
        android:id="@+id/tvFavEventName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:singleLine="true"
        android:ellipsize="end"
        android:layout_marginRight="@dimen/space_40"
        android:layout_marginLeft="@dimen/space_10"
        android:layout_toRightOf="@+id/ivFavEventType"
        android:text="Sheikh Mohd Bin Zayed Road"
        android:layout_marginTop="@dimen/space_5"
        android:textColor="@color/black"
        android:textSize="@dimen/font_14" />

    <TextView
        android:id="@+id/tvFavEventTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/tvFavEventName"
        android:layout_below="@+id/tvFavEventName"
        android:text="58 mins ago"
        android:layout_marginTop="@dimen/space_5"
        android:textColor="@color/gary"
        android:textSize="@dimen/font_12" />

    <TextView
        android:id="@+id/tvFavEventContent"
        android:layout_marginTop="@dimen/space_10"
        android:layout_below="@+id/ivFavEventType"
        android:text="On the morning of 6 February, 22 people were  injured in a majo"
        android:textColor="@color/translucence"
        android:textSize="@dimen/font_14"
        android:layout_marginRight="@dimen/space_10"
        android:layout_marginLeft="@dimen/space_10"
        android:maxLines="4"
        android:ellipsize="end"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />


    <View
        android:id="@+id/vDivider"
        android:layout_below="@+id/tvFavEventContent"
        android:layout_width="match_parent"
        android:layout_height="@dimen/space_1"
        android:layout_marginTop="@dimen/space_20"
        android:layout_marginLeft="@dimen/space_10"
        android:layout_marginRight="@dimen/space_10"
        android:layout_marginBottom="@dimen/space_5"
        android:background="@color/itemDivider" />

</RelativeLayout>