<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tvCalConTime"
        android:text="09:00-10:00"
        android:textColor="@color/layoutLoading"
        android:textSize="@dimen/font_12"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/tvCalConTitle"
        android:text="Visit Palm Jumeirah"
        android:textColor="@color/black_overlay"
        android:textSize="@dimen/font_14"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <View
        android:layout_marginBottom="@dimen/space_10"
        android:id="@+id/tvCalConView"
        android:layout_width="match_parent"
        android:layout_height="@dimen/space_1"
        android:layout_marginTop="@dimen/space_10"
        android:background="@color/itemDivider" />

</LinearLayout>