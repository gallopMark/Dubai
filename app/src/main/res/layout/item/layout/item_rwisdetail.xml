<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="@dimen/space_10">

    <LinearLayout
        android:id="@+id/llContent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/ivPic"
            android:layout_width="@dimen/space_40"
            android:layout_height="@dimen/space_40" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tvTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/space_10"
                android:layout_marginEnd="@dimen/space_10"
                android:textColor="@color/appTextColor"
                android:textSize="@dimen/font_16" />

            <TextView
                android:id="@+id/tvContent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/space_10"
                android:layout_marginTop="@dimen/space_2"
                android:layout_marginEnd="@dimen/space_10"
                android:textColor="@color/color_66"
                android:textSize="@dimen/font_14" />
        </LinearLayout>

        <ImageView
            android:id="@+id/ivClose"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:contentDescription="@string/close"
            android:padding="@dimen/space_3"
            android:src="@mipmap/ic_close_grey" />
    </LinearLayout>

    <View
        android:id="@+id/vLine"
        android:layout_width="match_parent"
        android:layout_height="@dimen/space_1"
        android:layout_marginTop="@dimen/space_10"
        android:background="@color/itemDivider"
        app:layout_constraintTop_toBottomOf="@+id/llContent" />

    <TextView
        android:id="@+id/tvRtTips"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/space_50"
        android:layout_marginTop="@dimen/space_10"
        android:text="@string/rwis_reportTime"
        android:textColor="@color/appTextColor"
        android:textSize="@dimen/font_14"
        app:layout_constraintEnd_toEndOf="@+id/tvRhTips"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/vLine" />

    <TextView
        android:id="@+id/tvRt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/space_16"
        android:layout_marginTop="@dimen/space_10"
        android:textColor="@color/color_66"
        android:textSize="@dimen/font_14"
        app:layout_constraintStart_toEndOf="@+id/tvRtTips"
        app:layout_constraintTop_toBottomOf="@+id/vLine" />

    <TextView
        android:id="@+id/tvWsTips"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/space_50"
        android:layout_marginTop="@dimen/space_5"
        android:text="@string/rwis_windSpeed"
        android:textColor="@color/appTextColor"
        android:textSize="@dimen/font_14"
        app:layout_constraintEnd_toEndOf="@+id/tvRhTips"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvRtTips" />

    <TextView
        android:id="@+id/tvWs"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/space_16"
        android:layout_marginTop="@dimen/space_5"
        android:textColor="@color/color_66"
        android:textSize="@dimen/font_14"
        app:layout_constraintStart_toEndOf="@+id/tvWsTips"
        app:layout_constraintTop_toBottomOf="@+id/tvRtTips" />

    <TextView
        android:id="@+id/tvVisTips"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/space_50"
        android:layout_marginTop="@dimen/space_5"
        android:text="@string/rwis_visibility"
        android:textColor="@color/appTextColor"
        android:textSize="@dimen/font_14"
        app:layout_constraintEnd_toEndOf="@+id/tvRhTips"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvWsTips" />

    <TextView
        android:id="@+id/tvVis"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/space_16"
        android:layout_marginTop="@dimen/space_5"
        android:textColor="@color/color_66"
        android:textSize="@dimen/font_14"
        app:layout_constraintStart_toEndOf="@+id/tvVisTips"
        app:layout_constraintTop_toBottomOf="@+id/tvWsTips" />

    <TextView
        android:id="@+id/tvSdTips"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/space_50"
        android:layout_marginTop="@dimen/space_5"
        android:text="@string/rwis_skyConditions"
        android:textColor="@color/appTextColor"
        android:textSize="@dimen/font_14"
        app:layout_constraintEnd_toEndOf="@+id/tvRhTips"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvVisTips" />

    <TextView
        android:id="@+id/tvSd"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/space_16"
        android:layout_marginTop="@dimen/space_5"
        android:textColor="@color/color_66"
        android:textSize="@dimen/font_14"
        app:layout_constraintStart_toEndOf="@+id/tvSdTips"
        app:layout_constraintTop_toBottomOf="@+id/tvVis" />

    <TextView
        android:id="@+id/tvTemTips"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/space_50"
        android:layout_marginTop="@dimen/space_5"
        android:text="@string/rwis_temperature"
        android:textColor="@color/appTextColor"
        android:textSize="@dimen/font_14"
        app:layout_constraintEnd_toEndOf="@+id/tvRhTips"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvSdTips" />

    <TextView
        android:id="@+id/tvTem"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/space_16"
        android:layout_marginTop="@dimen/space_5"
        android:textColor="@color/color_66"
        android:textSize="@dimen/font_14"
        app:layout_constraintStart_toEndOf="@+id/tvTemTips"
        app:layout_constraintTop_toBottomOf="@+id/tvSd" />

    <TextView
        android:id="@+id/tvDpTips"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/space_50"
        android:layout_marginTop="@dimen/space_5"
        android:text="@string/rwis_dewPoint"
        android:textColor="@color/appTextColor"
        android:textSize="@dimen/font_14"
        app:layout_constraintEnd_toEndOf="@+id/tvRhTips"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvTemTips" />

    <TextView
        android:id="@+id/tvDp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/space_16"
        android:layout_marginTop="@dimen/space_5"
        android:textColor="@color/color_66"
        android:textSize="@dimen/font_14"
        app:layout_constraintStart_toEndOf="@+id/tvDpTips"
        app:layout_constraintTop_toBottomOf="@+id/tvTem" />

    <TextView
        android:id="@+id/tvRhTips"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/space_50"
        android:layout_marginTop="@dimen/space_5"
        android:text="@string/rwis_relativeHumidity"
        android:textColor="@color/appTextColor"
        android:textSize="@dimen/font_14"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvDpTips" />

    <TextView
        android:id="@+id/tvRh"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/space_16"
        android:layout_marginTop="@dimen/space_5"
        android:textColor="@color/color_66"
        android:textSize="@dimen/font_14"
        app:layout_constraintStart_toEndOf="@+id/tvRhTips"
        app:layout_constraintTop_toBottomOf="@+id/tvDp" />
</android.support.constraint.ConstraintLayout>