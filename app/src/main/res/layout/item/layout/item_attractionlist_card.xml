<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="@dimen/space_10"
    android:layout_marginEnd="@dimen/space_10"
    app:cardCornerRadius="@dimen/space_10"
    app:cardElevation="@dimen/space_3"
    app:cardPreventCornerOverlap="false"
    app:cardUseCompatPadding="true"
    app:contentPadding="@dimen/space_10">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/ivPic"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/space_100"
            android:layout_centerVertical="true"
            android:scaleType="fitXY" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/ivPic"
            android:layout_alignBottom="@+id/ivPic"
            android:layout_centerVertical="true"
            android:layout_marginStart="@dimen/space_6"
            android:layout_toEndOf="@+id/ivPic"
            android:gravity="center|start">

            <TextView
                android:id="@+id/tvTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:maxLines="2"
                android:textColor="@color/appTextColor"
                android:textSize="@dimen/font_14" />

            <TextView
                android:id="@+id/tvLocation"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:layout_marginTop="@dimen/space_3"
                android:ellipsize="end"
                android:visibility="gone"
                android:maxLines="2"
                android:textColor="@color/grey"
                android:textSize="@dimen/font_13" />

            <TextView
                android:id="@+id/tvHours"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:layout_marginTop="@dimen/space_3"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="@dimen/space_3"
                android:ellipsize="end"
                android:maxLines="3"
                android:textColor="@color/grey"
                android:textSize="@dimen/font_13" />
        </RelativeLayout>
    </RelativeLayout>
</android.support.v7.widget.CardView>