<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:padding="@dimen/space_10"
    android:background="@color/white"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <ImageView
            android:id="@+id/ivBusStopType"
            android:layout_marginLeft="@dimen/space_10"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/icon_msg_accident" />

        <TextView
            android:id="@+id/tvBusStopName"
            android:layout_marginLeft="@dimen/space_10"
            android:textSize="@dimen/font_16"
            android:textColor="@color/black"
            android:text="AI Qusais"
            android:layout_toEndOf="@+id/ivBusStopType"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/tvBusStopDistance"
            android:text="Distanceï¼š8km"
            android:textColor="@color/black"
            android:textSize="@dimen/space_14"
            android:layout_below="@+id/tvBusStopName"
            android:layout_alignLeft="@+id/tvBusStopName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/tvGoToBusStop"
            android:background="@drawable/shape_fillet"
            android:text="Go"
            android:layout_marginRight="@dimen/space_10"
            android:paddingLeft="@dimen/space_15"
            android:paddingRight="@dimen/space_15"
            android:paddingTop="@dimen/space_5"
            android:paddingBottom="@dimen/space_5"
            android:textSize="@dimen/space_16"
            android:textColor="@color/red"
            android:layout_alignParentRight="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/tvBusContext"
            android:text="near to DDC Jumeirah, Jumeirah Road -  DubaiFaqea Police Statio"
            android:textColor="@color/gary"
            android:maxLines="2"
            android:ellipsize="end"
            android:textSize="@dimen/space_14"
            android:paddingRight="@dimen/space_10"
            android:layout_marginLeft="@dimen/space_10"
            android:layout_marginTop="@dimen/space_10"
            android:layout_below="@+id/ivBusStopType"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </RelativeLayout>


    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/space_1"
        android:layout_marginTop="@dimen/space_10"
        android:layout_marginLeft="@dimen/space_10"
        android:layout_marginRight="@dimen/space_10"
        android:background="@color/itemDivider" />

</LinearLayout>