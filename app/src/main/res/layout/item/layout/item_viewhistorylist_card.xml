<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="@dimen/space_10"
    android:layout_marginEnd="@dimen/space_10"
    app:cardCornerRadius="@dimen/space_10"
    app:cardElevation="@dimen/space_3"
    app:cardPreventCornerOverlap="false"
    app:cardUseCompatPadding="false"
    app:contentPadding="@dimen/space_10">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/ivPic"
            android:layout_width="@dimen/space_120"
            android:layout_height="@dimen/space_90"
            android:scaleType="fitXY" />

        <TextView
            android:id="@+id/tvTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/ivPic"
            android:layout_marginStart="@dimen/space_10"
            android:layout_toEndOf="@+id/ivPic"
            android:ellipsize="end"
            android:maxLines="2"
            android:textColor="@color/appTextColor"
            android:textSize="@dimen/font_14" />

        <TextView
            android:id="@+id/tvHours"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/ivPic"
            android:layout_gravity="bottom"
            android:layout_marginStart="@dimen/space_10"
            android:layout_marginBottom="@dimen/space_3"
            android:layout_toEndOf="@+id/ivPic"
            android:ellipsize="end"
            android:maxLines="2"
            android:textColor="@color/grey"
            android:textSize="@dimen/font_13" />

        <TextView
            android:id="@+id/tvLocation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/ivPic"
            android:layout_marginTop="@dimen/space_12"
            android:layout_toStartOf="@+id/tvDistance"
            android:drawableLeft="@mipmap/ic_address"
            android:drawablePadding="@dimen/space_5"
            android:ellipsize="end"
            android:gravity="center_vertical"
            android:maxLines="1"
            android:textColor="@color/black"
            android:textSize="@dimen/font_12" />


        <TextView
            android:id="@+id/tvDistance"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/ivPic"
            android:layout_alignParentRight="true"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/space_10"
            android:background="@drawable/bg_corners_colorb9_5dp"
            android:gravity="center"
            android:paddingStart="@dimen/space_6"
            android:paddingTop="@dimen/space_4"
            android:paddingEnd="@dimen/space_6"
            android:paddingBottom="@dimen/space_2"
            android:textColor="@color/white"
            android:textSize="@dimen/font_12" />

    </RelativeLayout>

</android.support.v7.widget.CardView>