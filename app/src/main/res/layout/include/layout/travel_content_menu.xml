<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingTop="@dimen/space_16"
    android:paddingBottom="@dimen/space_16">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tvHotels"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="?attr/selectableItemBackground"
            android:drawableTop="@mipmap/ic_menu_hotels"
            android:drawablePadding="@dimen/space_3"
            android:gravity="center"
            android:text="@string/travel_menu_hotels"
            android:textColor="@color/color_66"
            android:textSize="@dimen/font_12" />

        <TextView
            android:id="@+id/tvRestaurants"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="?attr/selectableItemBackground"
            android:drawableTop="@mipmap/ic_menu_restaurants"
            android:drawablePadding="@dimen/space_5"
            android:gravity="center"
            android:text="@string/travel_menu_restaurants"
            android:textColor="@color/color_66"
            android:textSize="@dimen/font_12" />

        <TextView
            android:id="@+id/tvGoods"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="?attr/selectableItemBackground"
            android:drawableTop="@mipmap/ic_menu_goods"
            android:drawablePadding="@dimen/space_3"
            android:gravity="center"
            android:text="@string/travel_menu_goods"
            android:textColor="@color/color_66"
            android:textSize="@dimen/font_12" />

        <TextView
            android:id="@+id/tvAttractions"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="?attr/selectableItemBackground"
            android:drawableTop="@mipmap/ic_menu_attractions"
            android:drawablePadding="@dimen/space_3"
            android:gravity="center"
            android:text="@string/travel_menu_attractions"
            android:textColor="@color/color_66"
            android:textSize="@dimen/font_12" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/space_16"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tvTransport"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="?attr/selectableItemBackground"
            android:drawableTop="@mipmap/ic_menu_transport"
            android:drawablePadding="@dimen/space_3"
            android:gravity="center"
            android:text="@string/travel_menu_transport"
            android:textColor="@color/color_66"
            android:textSize="@dimen/font_12" />

        <TextView
            android:id="@+id/tvGroups"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="?attr/selectableItemBackground"
            android:drawableTop="@mipmap/ic_menu_groups"
            android:drawablePadding="@dimen/space_5"
            android:gravity="center"
            android:text="@string/travel_menu_groups"
            android:textColor="@color/color_66"
            android:textSize="@dimen/font_12" />

        <TextView
            android:id="@+id/tvParking"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="?attr/selectableItemBackground"
            android:drawableTop="@mipmap/ic_menu_parking"
            android:drawablePadding="@dimen/space_3"
            android:gravity="center"
            android:text="@string/travel_menu_RTA_parking"
            android:textColor="@color/color_66"
            android:textSize="@dimen/font_12" />

        <TextView
            android:id="@+id/tvPolice"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="?attr/selectableItemBackground"
            android:drawableTop="@mipmap/ic_menu_police"
            android:drawablePadding="@dimen/space_3"
            android:gravity="center"
            android:text="@string/travel_menu_police"
            android:textColor="@color/color_66"
            android:textSize="@dimen/font_12" />
    </LinearLayout>

</LinearLayout>