<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="@dimen/space_14"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/tvNavigation"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:drawableTop="@mipmap/ic_navigation_white"
        android:drawablePadding="@dimen/space_5"
        android:gravity="center"
        android:text="@string/home_menu_navigation"
        android:textColor="@color/white"
        android:textSize="@dimen/font_14" />

    <TextView
        android:id="@+id/tvHighWay"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:drawableTop="@mipmap/ic_highway_white"
        android:drawablePadding="@dimen/space_5"
        android:gravity="center"
        android:text="@string/home_menu_roads"
        android:textColor="@color/white"
        android:textSize="@dimen/font_14" />

    <TextView
        android:id="@+id/tvNews"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:drawableTop="@mipmap/ic_news_white"
        android:drawablePadding="@dimen/space_5"
        android:gravity="center"
        android:text="@string/home_menu_news"
        android:textColor="@color/white"
        android:textSize="@dimen/font_14" />

    <TextView
        android:id="@+id/tvMore"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:drawableTop="@mipmap/ic_more_white"
        android:drawablePadding="@dimen/space_5"
        android:gravity="center"
        android:text="@string/home_menu_more"
        android:textColor="@color/white"
        android:textSize="@dimen/font_14" />
</LinearLayout>