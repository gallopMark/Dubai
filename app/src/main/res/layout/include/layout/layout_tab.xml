<?xml version="1.0" encoding="utf-8"?>
<HorizontalScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <TextView
                android:id="@+id/tvTab1"
                android:layout_width="match_parent"
                android:layout_height="@dimen/space_45"
                android:gravity="center"
                android:padding="@dimen/space_10"
                android:text="@string/near_me"
                android:textColor="@color/attractions_textcolor_selector" />

            <TextView
                android:id="@+id/tvTab2"
                android:layout_width="match_parent"
                android:layout_height="@dimen/space_45"
                android:layout_marginLeft="@dimen/space_10"
                android:layout_toEndOf="@+id/tvTab1"
                android:gravity="center"
                android:padding="@dimen/space_10"
                android:text="@string/all"
                android:textColor="@color/attractions_textcolor_selector" />

            <TextView
                android:id="@+id/tvTab3"
                android:layout_width="match_parent"
                android:layout_height="@dimen/space_45"
                android:layout_marginLeft="@dimen/space_10"
                android:layout_toEndOf="@+id/tvTab2"
                android:gravity="center"
                android:visibility="gone"
                android:padding="@dimen/space_10"
                android:text="@string/all"
                android:textColor="@color/attractions_textcolor_selector" />

            <View
                android:id="@+id/viewIn1"
                android:layout_width="@dimen/space_30"
                android:layout_height="@dimen/space_4"
                android:layout_alignEnd="@+id/tvTab1"
                android:layout_alignStart="@+id/tvTab1"
                android:layout_below="@+id/tvTab1"
                android:layout_marginLeft="@dimen/space_10"
                android:layout_marginRight="@dimen/space_10"
                android:layout_marginTop="@dimen/minus_15"
                android:background="@color/red" />


            <View
                android:id="@+id/viewIn2"
                android:layout_width="@dimen/space_30"
                android:layout_height="@dimen/space_4"
                android:layout_alignEnd="@+id/tvTab2"
                android:layout_alignStart="@+id/tvTab2"
                android:layout_below="@+id/tvTab2"
                android:layout_marginLeft="@dimen/space_10"
                android:layout_marginRight="@dimen/space_10"
                android:layout_marginTop="@dimen/minus_15"
                android:background="@color/red"
                android:visibility="gone" />

            <View
                android:id="@+id/viewIn3"
                android:layout_width="@dimen/space_30"
                android:layout_height="@dimen/space_4"
                android:layout_alignEnd="@+id/tvTab3"
                android:layout_alignStart="@+id/tvTab3"
                android:layout_below="@+id/tvTab3"
                android:layout_marginLeft="@dimen/space_10"
                android:layout_marginRight="@dimen/space_10"
                android:layout_marginTop="@dimen/minus_15"
                android:background="@color/red"
                android:visibility="gone" />
        </RelativeLayout>
    </LinearLayout>

</HorizontalScrollView>