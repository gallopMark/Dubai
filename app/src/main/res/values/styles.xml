<resources>
    <!--translucent dialog style-->
    <style name="TranslucentDialog" parent="@android:style/Theme.Dialog">
        <item name="android:windowBackground">@color/transparent</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowAnimationStyle">@android:style/Animation.Dialog</item>
    </style>

    <!--transparent dialog style-->
    <style name="TransparentDialog" parent="@android:style/Theme.Dialog">
        <item name="android:windowFrame">@null</item><!--Frame-->
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowIsTranslucent">false</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@color/transparent</item>
        <item name="android:backgroundDimEnabled">false</item>
    </style>

    <style name="OperateAnim" parent="@android:style/Animation">
        <item name="android:windowEnterAnimation">@anim/operate_in</item>
        <item name="android:windowExitAnimation">@anim/operate_out</item>
    </style>

    <!--解决启动白屏问题-->
    <style name="SplashTheme" parent="AppTheme">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowBackground">@color/transparent</item>
        <item name="android:windowDisablePreview">true</item>
    </style>

    <style name="e7yoo_number_edittext_text">
        <item name="android:paddingTop">@dimen/e7yoo_number_edittext_textpadding</item>
        <item name="android:paddingBottom">@dimen/e7yoo_number_edittext_textpadding</item>
        <item name="android:textColor">@color/e7yoo_number_edittext_color_text</item>
        <item name="android:textSize">@dimen/e7yoo_number_edittext_textsize</item>
        <item name="android:background">@drawable/e7yoo_number_edittext_textbg</item>
        <item name="android:layout_marginLeft">10dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:focusable">false</item>
        <item name="android:gravity">center</item>
        <item name="android:inputType">number</item>
        <item name="android:maxLength">1</item>
    </style>

    <style name="TranslucentThemeWithOutAnimation" parent="TranslucentTheme">
        <item name="android:windowAnimationStyle">@style/ActivityWithOutAnimation</item>
    </style>

    <style name="ActivityWithOutAnimation">
        <item name="android:activityOpenEnterAnimation">@null</item>
        <item name="android:activityOpenExitAnimation">@null</item>
        <item name="android:activityCloseEnterAnimation">@null</item>
        <item name="android:activityCloseExitAnimation">@null</item>
        <item name="android:taskOpenEnterAnimation">@null</item>
        <item name="android:taskOpenExitAnimation">@null</item>
        <item name="android:taskCloseEnterAnimation">@null</item>
        <item name="android:taskCloseExitAnimation">@null</item>
        <item name="android:taskToFrontEnterAnimation">@null</item>
        <item name="android:taskToFrontExitAnimation">@null</item>
        <item name="android:taskToBackEnterAnimation">@null</item>
        <item name="android:taskToBackExitAnimation">@null</item>
    </style>

    <style name="Custom_Ratingbar" parent="@android:style/Widget.RatingBar">
        <item name="android:progressDrawable">@drawable/ratingbar_star</item>
        <!-- <item name="android:minHeight">@dimen/space_30</item>
         <item name="android:maxHeight">@dimen/space_30</item>-->
    </style>

    <style name="ExpandedTitleTextAppearance" parent="@style/TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="android:textSize">@dimen/font_18</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textStyle">normal</item>
        <item name="android:maxLines">1</item>
        <item name="android:ellipsize">end</item>
    </style>

    <style name="CollapsedTitleTextAppearance" parent="@style/TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="android:textSize">@dimen/font_18</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textStyle">normal</item>
        <item name="android:maxLines">1</item>
        <item name="android:ellipsize">end</item>
    </style>

    <style name="DefaultDialog" parent="@android:style/Theme.Dialog">
        <item name="android:windowBackground">@color/transparent</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowFullscreen">false</item>
        <item name="android:windowAnimationStyle">@android:style/Animation.Dialog</item>
    </style>

    <style name="EditDialog" parent="@android:style/Theme.Dialog">
        <item name="android:windowBackground">@color/transparent</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowFullscreen">false</item>
        <item name="android:windowAnimationStyle">@android:style/Animation.Dialog</item>
    </style>

    <style name="ReportTextViewStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">@dimen/space_10</item>
        <item name="android:textColor">@color/appTextColor</item>
        <item name="android:textSize">@dimen/font_16</item>
    </style>

    <style name="ReportConfirmTextViewStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@color/color_F4F6FA</item>
        <item name="android:textColor">@color/gary</item>
        <item name="android:paddingTop">@dimen/space_6</item>
        <item name="android:paddingBottom">@dimen/space_6</item>
        <item name="android:paddingStart">@dimen/space_16</item>
        <item name="android:paddingEnd">@dimen/space_16</item>
        <item name="android:textSize">@dimen/font_16</item>
    </style>

    <style name="ReportConfirmTvDetailStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/appTextColor</item>
        <item name="android:paddingTop">@dimen/space_6</item>
        <item name="android:paddingBottom">@dimen/space_6</item>
        <item name="android:paddingStart">@dimen/space_16</item>
        <item name="android:paddingEnd">@dimen/space_16</item>
        <item name="android:textSize">@dimen/font_16</item>
    </style>
</resources>
