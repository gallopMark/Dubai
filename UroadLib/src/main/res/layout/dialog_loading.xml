<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_corners_white_5dp"
    android:gravity="center"
    android:layout_gravity="center"
    android:orientation="horizontal"
    android:paddingTop="@dimen/space_14"
    android:paddingBottom="@dimen/space_14"
    android:paddingLeft="@dimen/space_50"
    android:paddingRight="@dimen/space_50">

    <com.uroad.library.widget.CircularProgressView
        android:id="@+id/progressBar"
        android:layout_width="@dimen/space_40"
        android:layout_height="@dimen/space_40"
        android:layout_gravity="center"
        app:border_Width="@dimen/space_3"
        app:minSweepAngle="60" />

    <TextView
        android:id="@+id/mLoadingTv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginStart="@dimen/space_16"
        android:layout_marginLeft="@dimen/space_16"
        android:text="@string/dialog_loading"
        android:textSize="@dimen/font_18" />

</LinearLayout>